<?xml version="1.0" encoding="utf-8"?>
<!-- 扫描瓶的界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8" 
    >
    
   <RelativeLayout 
       android:id="@+id/rl_input"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       
       >
       
       <EditText 
           android:id="@+id/et_input"
           android:layout_width="260dp"
           android:layout_height="40dp"
           android:paddingLeft="5dp"
           android:background="@drawable/edittext_style"
           android:hint="请输入钢瓶钢印号"
         />

       <TextView
           android:id="@+id/tv_input"
           android:layout_width="90dp"
           android:layout_height="40dp"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:background="@drawable/button_selector"
           android:gravity="center"
           android:text="手动添加"
           android:textColor="#fff"
           android:textSize="14sp" />
       	
   </RelativeLayout>
   
   <!-- 用来存放碎片内容的 -->
   <RelativeLayout 
       android:id="@+id/rl_saomiao_fragment"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2"
       android:layout_marginTop="10dp">
       
       <RelativeLayout 
       android:id="@+id/rl_saomiao_fragment_content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
        <LinearLayout
           android:id="@+id/ll_titles"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/textview_type"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/type"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:background="#ddd"
               android:gravity="center"
               android:text="序列号"
               android:textColor="#333"
               android:textSize="14sp" />

           <View
               android:layout_width="0.5dp"
               android:layout_height="50dp" />

           <TextView
               android:id="@+id/num"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:background="#ddd"
               android:gravity="center"
               android:text="规格"
               android:textColor="#333"
               android:textSize="14sp" />

           <View
               android:layout_width="0.5dp"
               android:layout_height="50dp" />

           <TextView
               android:id="@+id/sum"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:background="#ddd"
               android:gravity="center"
               android:text="钢印号"
               android:textColor="#333"
               android:textSize="14sp" />
       </LinearLayout>
       
       <ListView 
       android:id="@+id/lv_content"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_height="wrap_content"
       android:background="@drawable/textview_type"
       android:scrollbars="none"
       android:layout_below="@+id/ll_titles">
       
           </ListView>
       
          </RelativeLayout>
       
       
      
   </RelativeLayout>
   
   <RelativeLayout 
       android:id="@+id/rl_button"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_marginTop="10dp">

       <TextView
           android:id="@+id/next"
           android:layout_width="288dp"
           android:layout_height="39dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="30dp"
           android:background="@drawable/commit"
           android:gravity="center"
           android:text="下一步"
           android:textColor="#fff" />

       <RadioGroup
           android:id="@+id/rg_usertype"
           android:layout_width="match_parent"
           android:layout_height="29dp"
           android:layout_above="@+id/next"
           android:layout_alignParentLeft="true"
           android:layout_marginBottom="30dp"
           android:orientation="horizontal" 
           android:gravity="center_horizontal">

           <RadioButton
               android:id="@+id/rb_newuser"
               style="@style/UserTypeRadioTopStyle"
               android:layout_width="100dp"
               android:layout_height="29dp"
               android:background="@drawable/user_type_radiobutton"
               android:text="新用户" />

           <RadioButton
               android:id="@+id/rb_olduser"
               style="@style/UserTypeRadioTopStyle"
               android:layout_width="100dp"
               android:layout_height="29dp"
               android:background="@drawable/user_type_radiobutton"
               android:text="老用户"
               android:layout_marginLeft="20dp" />

       </RadioGroup>
       
   </RelativeLayout>
    
    
    

</LinearLayout>
