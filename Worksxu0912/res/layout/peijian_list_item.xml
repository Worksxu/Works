<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:orientation="horizontal">
          <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥" 
        android:visibility="gone"
        />
           <View android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:background="#ddd"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="类型"
        android:layout_marginLeft="10dp"
        
         />
    <View android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:background="#ddd"/>
    
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="10" />
    
     <View android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:background="#ddd"/>
    
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="50dp">

    <EditText
        android:id="@+id/iv_peijian_num"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/iv_peijian_sup"
        android:layout_centerHorizontal="true"
        android:background="@drawable/num"
        android:gravity="center"
        android:lines="1"
        android:numeric="integer"
        android:singleLine="true"
        android:text="1" />

    <ImageView
        android:id="@+id/iv_peijian_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_peijian_num"
        android:src="@drawable/add_1" />

    <ImageView
        android:id="@+id/iv_peijian_sup"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_peijian_num"
        android:src="@drawable/sup" />
        
    </RelativeLayout>

   

    

    
    </LinearLayout>

</LinearLayout>
