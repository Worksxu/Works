<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f8f8f8">
    
    <RelativeLayout 
        android:id="@+id/rl_last"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff">
        
        <TextView 
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="上次安检标注："
            android:textSize="15sp"
            android:textColor="#999"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_last_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_last"
            android:text="1,2,3"
            android:textColor="#999"
            android:textSize="15sp" 
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>
        
    </RelativeLayout>
    
    <View style="@style/line_style"/>
    
     <View style="@style/line_style"
         android:layout_marginTop="10dp"/>
     
     <RelativeLayout 
         android:id="@+id/rl_content"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:background="#fff">
        
         <TextView 
             android:id="@+id/tv_content_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="检查内容"
             android:textSize="15sp"
             android:layout_centerVertical="true"
             android:textColor="@color/home_connet_hours"
             android:layout_marginLeft="10dp"/>

         <TextView
             android:id="@+id/tv_content_futitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/tv_content_title"
             android:text="（有问题的内容请点击标注）"
             android:textColor="#333"
             android:textSize="13sp" 
             />
         
     </RelativeLayout>
     
     <View style="@style/line_style"/>
     
     <ListView 
         android:id="@+id/lv_self"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="9"
         android:background="#fff">
         
     </ListView>
     <View style="@style/line_style"/>
     
     <RelativeLayout 
         android:id="@+id/rl_next"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1.3"
         android:layout_marginTop="20dp">
         <LinearLayout 
             android:id="@+id/ll"
             android:layout_width="match_parent"
             android:layout_height="fill_parent"
             android:orientation="horizontal"
             android:gravity="center">
             
             <RelativeLayout 
                 android:id="@+id/rl"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="fill_parent"
                 >
                 
                  <CheckBox
             android:id="@+id/iv_peijian"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="10dp"
             android:layout_marginBottom="15dp"
             android:background="@drawable/peijian"
             android:scaleType="fitXY" 
              android:button="@null" 
             android:layout_centerVertical="true"/>

         <TextView
             android:id="@+id/tv_peijian"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignTop="@+id/iv_peijian"
             android:layout_toRightOf="@+id/iv_peijian"
             android:text="选择配件"
             android:textColor="#333"
             android:textSize="15sp" 
             android:layout_marginLeft="10dp"/>
                 
                 
             </RelativeLayout>

             <TextView
                 android:id="@+id/tv_next"
                 android:layout_width="0dp"
                 android:layout_weight="2"
                 android:layout_height="39dp"
                 android:background="@drawable/button_bg"
                 android:gravity="center"
                 android:text="下一步"
                 android:textColor="#fff"
                 android:textSize="15sp" />
             
         </LinearLayout>
        
         
       
         
     </RelativeLayout>
    
    

</LinearLayout>
