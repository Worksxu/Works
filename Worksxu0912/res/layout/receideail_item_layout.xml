<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                
                android:background="#ffffff"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/tv_receideail_number"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="合同编号" />
                <TextView
                    android:id="@+id/tv_receideail_money"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                     android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="金额" />
                
                <TextView
                    android:id="@+id/tv_receideail_type"
                    android:textColor="#333"
                    android:textSize="15sp"
                     android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="类型" />
                <TextView
                     android:id="@+id/tv_receideail_time"
                    android:textColor="#333"
                    android:textSize="15sp"
                     android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="时间" />
                <LinearLayout 
                      android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="5dip"
                    android:layout_height="wrap_content">
                <CheckBox
                android:id="@+id/checkBox_receideail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                android:button="@drawable/zhekou_selecter"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
</LinearLayout>
            </LinearLayout>
    

</LinearLayout>
