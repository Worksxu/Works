<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
     <RadioGroup 
        android:id="@+id/rg_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:orientation="horizontal"
        android:gravity="center_horizontal"
       >

        <RadioButton
            android:id="@+id/rb_deducation_select"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobutton"
             style="@style/RadioTopStyle"
            android:text="可使用优惠券" 
            android:gravity="center"
            android:checked="true"
          />

        <RadioButton 
            android:id="@+id/rb_deducation_all"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="全部优惠券"
            android:background="@drawable/radiobutton_right"
             style="@style/RadioTopStyle"
              android:gravity="center"
              />
    

</RadioGroup>
    
    <ListView
        android:id="@+id/listView_deducation"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:divider="#ffffff"
        android:dividerHeight="10dp"
        android:layout_weight="2" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
       >
        <TextView
            
           android:id="@+id/tv_deducation_sure"
           android:layout_width="match_parent"
           android:layout_height="39dp"
         
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
           android:background="@drawable/commit"
           android:gravity="center"
           android:text="确定"
          
           android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>
