<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_xuback_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_xuback_yuqitoast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余气金额 :"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_xuback_yuqi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.0"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余气重量 : "
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_xuback_yuqiweight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:id="@+id/ll_xuback_gassToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全额退还 : "
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_xuback_gassMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0"
            android:textColor="#666666"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/imageView_xuback_gass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/zhekou_selecter" />
    </LinearLayout>

    <View style="@style/line_style" />

    <View
        style="@style/line_style"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户押金: "
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_xuback_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.0"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="押金总额"
            android:textColor="#999999"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/textView_xuback_yajin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入退押金"
            android:textColor="#666666"
            android:inputType="number" 
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

       

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom" >

        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退款总额 : "
                        android:textColor="#333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView_xuback_Toatal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="#FF5555"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                     android:id="@+id/tv_xuback_next"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:background="@color/title"
                    android:gravity="center"
                   
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>