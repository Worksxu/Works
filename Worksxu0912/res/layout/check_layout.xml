<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:gravity="center"
        android:background="@color/title"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/home_shape"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_height="match_parent" >

            

           
            <EditText 
                android:id="@+id/editText_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
               
                android:layout_weight="1"
                
                android:gravity="center"
                android:hint="请输入钢印号"
                android:textColor="#999999"
                android:textSize="12sp"
                android:ems="10" 
                />

            <ImageView
                android:id="@+id/imageView_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/shousuo" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/check_shape"
            android:text="订单号" />
        <TextView
            android:background="@drawable/check_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="钢瓶状态" />
        <TextView
            android:background="@drawable/check_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="钢瓶号" />
        <TextView
            android:background="@drawable/check_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="规格" />
        <TextView
            android:background="@drawable/check_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="日期" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_checkToast"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp" 
        android:visibility="gone"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView_checkOrder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/check_shape1"
            android:layout_height="match_parent"
            android:text=""/>
        <TextView
            android:id="@+id/textView_checkStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/check_shape1"
            android:layout_height="match_parent"
            android:text=""/>
        <TextView
            android:id="@+id/textView_checkNumeber"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
             android:background="@drawable/check_shape1"
            android:layout_height="match_parent"
            android:text=""/>
        <TextView
            android:id="@+id/textView_checkWeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/check_shape1"
            android:layout_height="match_parent"
            android:text=""/>
        <TextView
            android:id="@+id/textView_checkDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
             android:background="@drawable/check_shape1"
            android:layout_height="match_parent"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="7"
        android:orientation="vertical" >

      

    </LinearLayout>

</LinearLayout>
