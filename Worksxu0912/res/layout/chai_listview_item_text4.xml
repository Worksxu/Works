        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" />
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#dddddd" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" />
</LinearLayout>