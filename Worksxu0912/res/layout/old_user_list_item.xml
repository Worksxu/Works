<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <ImageView
            android:id="@+id/iv_old_ischeck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:background="@drawable/unchecked"
           />

        <TextView
            android:id="@+id/tv_old_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_old_ischeck"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@+id/iv_old_ischeck"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_old_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_old_name"
            android:layout_alignBottom="@+id/tv_old_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_old_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_old_ischeck"
            android:layout_alignLeft="@+id/tv_old_name"
            android:text="TextView" />

    </RelativeLayout>

</LinearLayout>
