<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/rb_ping"
            style="@style/RadioTopStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radiobutton"
            android:checked="true"
            android:gravity="center"
            android:text="可使用优惠券" />

        <RadioButton
            android:id="@+id/rb_peijian"
            style="@style/RadioTopStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radiobutton_right"
            android:gravity="center"
            android:text="不可用优惠券" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:visibility="gone" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/youhui_left"
                android:ems="10"
                android:gravity="center"
                android:hint="请输入优惠券码"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/youhui_right"
                android:gravity="center"
                android:text="激活"
                android:textColor="#ffffff" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView_Tost_youhui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:divider="#f8f8f8"
            android:dividerHeight="10dp" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="0dp"
        android:layout_weight="1"
       
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_youhui_next"
            android:layout_width="match_parent"
            android:layout_height="39dp"
           
            android:background="@drawable/commit"
            android:gravity="center"
            android:text="确定"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>