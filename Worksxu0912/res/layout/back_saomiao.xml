<?xml version="1.0" encoding="utf-8"?>
<!-- 退瓶的扫描空瓶界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff">
    
    <!-- 扫描瓶的界面 -->
    
   <RelativeLayout 
       android:id="@+id/rl_input"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       
       >
       
       <EditText 
           android:id="@+id/et_input"
           android:layout_width="260dp"
           android:layout_height="40dp"
           android:paddingLeft="3dp"
           android:background="@drawable/edittext_style"
           android:layout_marginLeft="5dp"
           android:hint="请输入钢瓶钢印号"
          />

       <TextView
           android:id="@+id/tv_input"
           android:layout_width="90dp"
           android:layout_height="40dp"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:background="@drawable/button_selector"
           android:gravity="center"
           android:text="手动添加"
           android:textColor="#fff"
           android:textSize="14sp" />
       	
   </RelativeLayout>
   
   <!-- 用来存放碎片内容的 -->
   <RelativeLayout 
       android:id="@+id/rl_saomiao_fragment"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_marginTop="10dp"
       >
        <LinearLayout
           android:id="@+id/ll_titles"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:background="@drawable/textview_type"
           android:orientation="horizontal" >

           <TextView
               android:id="@+id/type"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:background="#ddd"
               android:gravity="center"
               android:text="钢印号"
               android:textColor="#333"
               android:textSize="14sp" />

           <View
               android:layout_width="0.5dp"
               android:layout_height="50dp" />

           <TextView
               android:id="@+id/num"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:background="#ddd"
               android:gravity="center"
               android:text="数量"
               android:textColor="#333"
               android:textSize="14sp" />

           <View
               android:layout_width="0.5dp"
               android:layout_height="50dp" />

           <TextView
               android:id="@+id/sum"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="1"
               android:background="#ddd"
               android:gravity="center"
               android:text="合计"
               android:textColor="#333"
               android:textSize="14sp" />
       </LinearLayout>
       
       <ListView 
       android:id="@+id/lv_content"
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:layout_height="wrap_content"
       android:background="@drawable/textview_type"
       android:scrollbars="none"
       android:layout_below="@+id/ll_titles">
       
           </ListView>
       
   </RelativeLayout>
   
   <LinearLayout 
       android:id="@+id/ll_surplus"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_marginTop="10dp"
       android:orientation="vertical">
       
       <RelativeLayout 
           android:id="@+id/rl_surplus"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           
            <com.ruiqi.view.CustomDownView 
              android:id="@+id/CustomDownView_backsaomiao_yuqi"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:visibility="gone"
               android:layout_centerHorizontal="true"
               
               
              ></com.ruiqi.view.CustomDownView>
            
         
           <TextView
               android:id="@+id/tv_next"
               style="@style/next"
               android:layout_width="288dp"
               android:layout_height="39dp"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:text="下一步"
               android:layout_marginBottom="10dp" />
           
       </RelativeLayout>
       
       
       
   </LinearLayout>
    

</LinearLayout>
