<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f8f8f8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        
        android:background="@color/title"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="50dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="21dp"
                android:layout_height="21dp"
                
                android:scaleType="fitXY"
                android:src="@drawable/bt_image_back" />

        </LinearLayout>

        
        <RadioGroup 
        android:id="@+id/rg_select"
        android:layout_marginLeft="10dp"
        android:layout_width="199dp"
        android:layout_height="29dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
       >

        <RadioButton
            android:id="@+id/rb_unfinsh"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            
            android:background="@drawable/money_in"
             style="@style/RadioTop"
            android:text="退瓶管理" 
            android:gravity="center"
            android:checked="true"
          />

        <RadioButton 
            android:id="@+id/rb_finsh"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="置换管理"
            android:background="@drawable/money_out"
             style="@style/RadioTop"
              android:gravity="center"
              />
        
        
    </RadioGroup>
    </LinearLayout>
    
    
    <!-- 用来存放内容的碎片 -->
    <RelativeLayout 
        android:id="@+id/rl_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginTop="10dp"
        >
        
    </RelativeLayout>
    

</LinearLayout>
