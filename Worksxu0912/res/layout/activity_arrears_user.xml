<?xml version="1.0" encoding="utf-8"?>
<!-- 欠款客户界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f8f8f8">
    
    <RelativeLayout 
        android:id="@+id/rl_arrears_num"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title">
        
        <TextView 
            android:id="@+id/tv_arrears_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欠款客户数量 :"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            android:textColor="#ffffff"
           android:layout_alignBaseline="@+id/tv_arrears_num"
            android:layout_alignBottom="@+id/tv_arrears_num"
            android:layout_toRightOf="@+id/tv_arrears_num"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        
    </RelativeLayout>
    
    <View style="@style/line_style"/>
    
     <RelativeLayout 
        android:id="@+id/rl_arrears_money"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title">
        
        <TextView 
            android:id="@+id/tv_arrears_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欠款总金额 : "
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_arrears_money"
            android:layout_alignBottom="@+id/tv_arrears_money"
            android:layout_toRightOf="@+id/tv_arrears_money"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="15sp" />
        
    </RelativeLayout>
    
     <View style="@style/line_style"/>
     
     
     <RelativeLayout 
         android:id="@+id/rl_input"
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_marginTop="5dp"
         >
        
         <EditText
             android:id="@+id/et_input"
             android:layout_width="270dp"
             android:layout_height="40dp"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"
             android:background="@drawable/edittext_style"
             android:ems="10"
             android:layout_marginTop="10dp"
             android:layout_centerInParent="true" 
             android:gravity="center"
             android:hint="客户姓名"/>
         
         
         <ImageView
             android:id="@+id/select"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignRight="@+id/et_input"
             android:layout_centerVertical="true"
             android:background="@drawable/shousuo" 
             android:layout_marginRight="10dp"/>
         
     </RelativeLayout>
     
     
     
     <RelativeLayout 
         android:id="@+id/rl_content"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         
     </RelativeLayout>

</LinearLayout>
