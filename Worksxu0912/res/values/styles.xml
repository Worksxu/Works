<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 自定义ratingbar -->
    
     <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">17dp</item>
        <item name="android:maxHeight">17dp</item>
        <item name="android:minWidth">17dp</item>
    </style>
    
    <!-- 横线 -->
    
      <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ddd</item>
    </style>
    <!-- 自下而上动画的弹出框 -->
      <style name="AnimBottom">
            <item name="android:windowEnterAnimation">@anim/pophidden_in_anim</item>
        <item name="android:windowExitAnimation">@anim/popshow_out_anim</item>
      </style>
      <!-- radiobutton -->
        <style name="RadioTopStyle" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/btn_text_selector</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
        <style name="RadioTop" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/money_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
        <style name="RadioStyle" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text_selector</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
        
         <style name="UserTypeRadioTopStyle" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/user_type_seletor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
         <style name="next" >
             <item name="android:textColor">#fff</item>
              <item name="android:gravity">center</item>
              <item name="android:background">@drawable/commit</item>
               <item name="android:layout_height">39dp</item>
             
         </style>
         
         <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
         
         <style name="AnimActivityTheme">
    			<item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
		</style>
         <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/in_from_left</item>
    <item name="android:activityOpenExitAnimation">@anim/out_from_right</item>
    <item name="android:activityCloseEnterAnimation">@anim/in_from_right</item>
    <item name="android:activityCloseExitAnimation">@anim/out_from_left</item>
</style>

</resources>
